{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true
  },
  "include": ["vite.config.js", "tailwind.config.js", "postcss.config.js"]
}
